// virgulas a mais
CREATE TABLE bairro (cd_bairro INTEGER,nm_bairro VARCHAR(75),
sg_uf CHAR(2),
PRIMARY KEY (cd_bairro),
FOREIGN KEY (nm_bairro) REFERENCES bairro (nm_bairro));  

// não usou `` no AS
